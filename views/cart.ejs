<% include ./partials/header.ejs %>
    <% include ./navbar.ejs %>

<% let total_cost = 0; %>
    <div class="container mx-auto mt-10">
        <div class="flex justify-center">
            <div class="w-full lg:w-3/4">
                <h2 class="text-2xl font-bold text-gray-800 mb-4">Your Cart</h2>
                <div class="bg-white shadow-md rounded-lg p-6">
                    <% if (user.cart.length > 0) { %>
                        <% user.cart.forEach(function(item) { %>
                       

                            <div class="flex items-center border-b border-gray-200 py-4">
                                <img class="w-36 h-36 object-cover rounded" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="<%= item.name %>">
                                <div class="ml-4 flex-1">
                                    <h3 class="text-lg font-semibold text-gray-800"><%= item.name %></h3>
                                    <p class="text-gray-600">Quantity: <%= item.quantity %></p>
                                    <p class="text-gray-600">Price: $<%= item.price %></p>
                                </div>
                                <% total_cost += item.price %>
                                <div>
                                        <a href="/cart/remove/<%= item._id %>"><button type="submit" class="text-red-500 hover:text-red-700">Remove</button></a>
                                    
                                </div>
                            </div>
                        <% }); %>
                        <div class="flex justify-between items-center mt-4">
                            <h3 class="text-xl font-semibold text-gray-800">Total: $<%= total_cost %></h3>
                            <a href="/checkout" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Proceed to Checkout</a>
                        </div>
                    <% } else { %>
                        <p class="text-gray-600">Your cart is empty.</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>



        <% include ./partials/footer.ejs %>